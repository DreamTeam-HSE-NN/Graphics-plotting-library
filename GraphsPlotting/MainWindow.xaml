<Window x:Class="GraphsPlotting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:zed="clr-namespace:ZedGraph;assembly=ZedGraph"
        xmlns:local="clr-namespace:GraphsPlotting"
        
        
        mc:Ignorable="d"
        Title="Рисование графиков" Height="644" Width="1232" FontWeight="Medium" FontFamily="Times New Roman" FontSize="20">
    <Viewbox Stretch="Uniform">
        <Grid Name="MainRoot" Margin="0,0,0,-16" Background="Gray" >

            <TextBox x:Name="TextBoxInput" HorizontalAlignment="Left" Margin="0,113,0,0" TextWrapping="Wrap" Text="y = sin(x)" VerticalAlignment="Top" Width="382" Height="60" FontSize="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="TextBoxInput_TextChanged"/>
            <Label Content="Напишите функцию" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Height="43" Width="388" FontSize="30"/>
            <Label Content="Нижняя граница" HorizontalAlignment="Left" Margin="0,205,0,0" VerticalAlignment="Top" Height="32" Width="164"/>
            <Label Content="Верхняя граница" HorizontalAlignment="Left" Margin="272,206,0,0" VerticalAlignment="Top" Height="30" Width="164"/>
            <Button x:Name ="BtnPrint" Content="Построить" HorizontalAlignment="Left" Margin="436,113,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.52,0.501" Height="70" Width="114" Click="BtnPrint_Click"/>
            <Button x:Name ="BtnRead" Content="Из файла" HorizontalAlignment="Left" Margin="436,456,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.52,0.501" Height="70" Width="109" Click="BtnRead_Click"/>
            <Button x:Name="first" Content="1" HorizontalAlignment="Left" Margin="0,526,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="second" Content="2" HorizontalAlignment="Left" Margin="109,526,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="third" Content="3" HorizontalAlignment="Left" Margin="218,526,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="fourth" Content="4" HorizontalAlignment="Left" Margin="0,456,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="fifth" Content="5" HorizontalAlignment="Left" Margin="109,456,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="sixth" Content="6" HorizontalAlignment="Left" Margin="218,456,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="seventh" Content="7" HorizontalAlignment="Left" Margin="0,386,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="eighth" Content="8" HorizontalAlignment="Left" Margin="109,386,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button x:Name="ninth" Content="9" HorizontalAlignment="Left" Margin="218,386,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="(" HorizontalAlignment="Left" Margin="0,316,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content=")" HorizontalAlignment="Left" Margin="109,316,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="^" HorizontalAlignment="Left" Margin="218,316,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="/" HorizontalAlignment="Left" Margin="327,526,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="+" HorizontalAlignment="Left" Margin="327,456,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="-" HorizontalAlignment="Left" Margin="327,386,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="*" HorizontalAlignment="Left" Margin="327,316,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="0" HorizontalAlignment="Left" Margin="436,526,0,0" VerticalAlignment="Top" Height="70" Width="109" Click="Button_Click"/>
            <Button Content="Очистить" HorizontalAlignment="Left" Margin="436,183,0,0" VerticalAlignment="Top" Height="70" Width="114" Click="Button_Click"/>
            <Button x:Name="functions" Content="Функции" Margin="436,386,665,140" Click="Button_Click_1" RenderTransformOrigin="0.903,0.524"/>

            <TextBox x:Name="TextBoxUpBound" HorizontalAlignment="Left" Margin="272,233,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="164" Height="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                       FontSize="30" TextChanged="TextBoxInput_TextChanged"/>
            <TextBox x:Name="TextBoxDownBound" HorizontalAlignment="Left" Margin="0,233,0,0" TextWrapping="Wrap" Text="-3" VerticalAlignment="Top" Width="164" Height="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                       FontSize="30" TextChanged="TextBoxInput_TextChanged"/>
            <WindowsFormsHost HorizontalAlignment="Left" Height="586" Margin="550,10,0,0" VerticalAlignment="Top" Width="661" ChildChanged="WindowsFormsHost_ChildChanged">
                <zed:ZedGraphControl  x:Name="zgc" Width="400" Height="400" />
            </WindowsFormsHost>
            <Border BorderBrush="Black" BorderThickness="1">
                <Button Content="×" Margin="377,111,774,423" FontSize="50" Click="Button_Click_3"/>

            </Border>
        </Grid>
    </Viewbox>
</Window>
